ssh root@176.57.217.63 'export DEBIAN_FRONTEND=noninteractive; apt-get update -y && apt-get install -y git curl ca-certificates nginx && curl -fsSL https://deb.nodesource.com/setup_20.x | bash - && apt-get install -y nodejs && npm i -g pm2 && mkdir -p /opt/app && cd /opt/app && rm -rf loveSonia && git clone https://github.com/pKa1/loveSonia.git && cd loveSonia/web && printf "AUTH_SECRET=%s\nDATABASE_URL=%s\nAPP_URL=%s\nWEB_PUSH_PUBLIC_KEY=\nWEB_PUSH_PRIVATE_KEY=\nAITUNNEL_API_KEY=\nCRON_SECRET=\n" "$(openssl rand -hex 32)" "file:./prisma/dev.db" "https://lovesonia.ru" > .env && npm ci && npx prisma migrate deploy && npm run build && pm2 delete lovesonia || true && pm2 start "npm --name lovesonia -- run start" --update-env && pm2 save && printf "server {\n  listen 80;\n  server_name lovesonia.ru www.lovesonia.ru;\n  location / {\n    proxy_pass http://127.0.0.1:3000;\n    proxy_set_header Host \$host;\n    proxy_set_header X-Real-IP \$remote_addr;\n    proxy_set_header X-Forwarded-For \$proxy_add_x_forwarded_for;\n    proxy_set_header X-Forwarded-Proto \$scheme;\n  }\n}\n" > /etc/nginx/sites-available/lovesonia && ln -sf /etc/nginx/sites-available/lovesonia /etc/nginx/sites-enabled/lovesonia && nginx -t && systemctl restart nginx'